{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/encryption/(.*)": "<rootDir>/../libs/encryption/src/$1",
    "@app/encryption": "<rootDir>/../libs/encryption/src",
    "@app/solana-blockchain/(.*)": "<rootDir>/../libs/solana-blockchain/src/$1",
    "@app/solana-blockchain": "<rootDir>/../libs/solana-blockchain/src",
    "@app/st-common-domain/(.*)": "<rootDir>/../libs/st-common-domain/src/$1",
    "@app/st-common-domain": "<rootDir>/../libs/st-common-domain/src"
  }
}